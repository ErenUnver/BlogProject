@using static BlogProjectUI.Controllers.EmployeeController
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>İsim&Soyisim</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td><a href="/Employee/DeleteEmployee/@item.ID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Employee/EditEmployee/@item.ID" class="btn btn-outline-primary">Düzenle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-outline-success">Yeni Empleyee</a>

