@model BlogProjectUI.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Güncelleme</h4>
            <br />

            @Html.HiddenFor(x=>x.WriterID)
            <div class="form-group">
                <label for="exampleInputName1">Name</label>
                @Html.TextBoxFor(x=>x.WriterName,new {@class="form control"})
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Email address</label>
                @Html.TextBoxFor(x=>x.WriterMail,new {@class="form control"})
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Password</label>
                @Html.TextBoxFor(x=>x.WriterPassword,new {@class="form control"})
            </div>

            <div class="form-group">
                <label>Yazar Görseli</label>
                <input type="file" name="WriterImage" />
            </div>

            <div class="form-group">
                <label for="exampleTextarea1">Yazar Hakkında</label>
                @Html.TextAreaFor(x=>x.WriterName,10,3, new {@class="form control"})

            </div>
            <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
            <button class="btn btn-light">Cancel</button>

        </div>
    </div>
</div>
</form>
