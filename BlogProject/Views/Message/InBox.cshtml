@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazar'ın Blogları</h1>
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td> @(((DateTime)item.MessageDate).ToString("dd/MMM/yyyy"))</td>
            <td> <a href="/Message/MessageDetails" class="btn btn-outline-success"><i class="mdi mdi-eye"></i>See the Message</a></td>
            <td></td>
        </tr>
    }
</table>
<a href="/Blog/AddBlog" class="btn btn-outline-primary"><i class="mdi mdi-plus"></i>Blog Oluştur</a>

